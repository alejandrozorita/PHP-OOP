{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "verify",
      "type": "shell",
      "command": "mvn -B verify",
      "group": "build",
      "problemMatcher": [
        "$go"
      ]
    },
    {
      "label": "test",
      "type": "shell",
      "command": "mvn -B test",
      "group": "test"
    }
  ],
  "command": "explorer",
  "windows": {
    "command": "explorer.exe"
  },
  "args": ["test.html"]
}
